<Application x:Class="FrameModuleExam.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FrameModuleExam"
             StartupUri="MainWindow.xaml">
	<Application.Resources>
		<Style TargetType="TextBlock">
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Margin" Value="3"/>
		</Style>
		<Style x:Key="Header" TargetType="TextBlock">
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="FontFamily" Value="Segoe Print"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Foreground" Value="#FF654012"/>
			<Setter Property="Margin" Value="7"/>
		</Style>

		<Style x:Key="Header2" TargetType="TextBlock" BasedOn="{StaticResource Header}">
			<Setter Property="FontSize" Value="18"/>
		</Style>

		<Style TargetType="Button">
			<Setter Property="Background" Value="#FFCAB7B7"/>
			<Setter Property="Margin" Value="7"/>

		</Style>
    </Application.Resources>
</Application>
